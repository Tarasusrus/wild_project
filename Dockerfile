# Использовать официальный образ Golang в качестве базового
FROM golang:latest

# Проверить версию 
RUN go version

# Установить рабочую директорию внутри контейнера
WORKDIR /app

# Копировать файлы Go модуля и загрузить зависимости
COPY go.mod go.sum ./
RUN go mod download

# Копировать исходный код
COPY . .

# Собрать приложение
RUN go build -o myapp

# Запускать приложение при старте контейнера
CMD ["./myapp"]
